<div class="tutorial-section">
    <div class="tutorial-wrap">
        {% for tutorial in tutorials %}
            <div class="tutorial">
                <div class="tutorial-head">
                    <img src="http://localhost/widy/project/dummy_project_3/app/core/videos/cover-img/{{ tutorial.img_cover }}" alt="video-poster" {% if tutorial.is_revoke == 'Y' %}style="opacity:0.5;"{% endif %}>
                </div>
                <div class="tutorial-body">
                    <div class="info-1">
                        <span style="display: none;">{{ tutorial.id }}</span>
                        <span class="tutorial-title" {% if tutorial.is_revoke == 'Y' %}style="opacity:0.5;"{% endif %}><a>{{ tutorial.title }}</a></span>
                        <span class="tooltiptext">Click for details</span>
                    </div>
                    <div class="info-2">
                        <span class="tutorial-author">By {{ tutorial.created_by }}</span>
                        <small class="tutorial-date">{{ tutorial.created_date }}</small>
                    </div>
                </div>
                <div class="tutorial-foot">
                    {% block content %}{% endblock %}
                    <div class="like-cost-wrapper">
                        <span class="tutorial-like">
                            <img src="{{ BASEURL }}/svg/Green_Heart_Icon.svg" alt="like">
                            <span>{{ tutorial.total_like }}</span>
                        </span>
                        <span class="tutorial-cost">
                            <img src="{{ BASEURL }}/svg/green_dollar_icon.svg" alt="cost">
                            <span>{{ tutorial.prize }}</span>
                        </span>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% if total_tutorials > 4 %}
        <div class="tutorial-more">
            <button type="button" class="load-more">More</button>
            <input type="hidden" id="current-display-total-tutorial" value="0">
            <input type="hidden" id="all-tutorials" value="{{ total_tutorials }}">
        </div>
    {% endif %}
    <div class="modalDetailTutorial">
        <div class="modal-content">
            <span class="close-detail-tutorial">&times;</span>
            <h3>Tutorial Detail</h3>
            <div class="detail-tutorial"></div>
        </div>
    </div>
</div>